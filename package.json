{
  "name": "festicket-recruitment-task",
  "version": "1.0.0",
  "description": "Recruitment task for Festicket.",
  "repository": "",
  "scripts": {
    "test": "wdio",
    "lint": "tslint --fix 'test/**/*.ts' && tslint --fix 'src/**/*.ts'",
    "report": "npm run report:saveHistory && npm run report:generate && npm run report:clear && npm run report:open",
    "report:generate": "allure generate --clean 'allure-source' -o 'allure'",
    "report:open": "allure open 'allure'",
    "report:clear": "rimraf 'allure-source'",
    "report:saveHistory": "mkdirp 'allure/history' && cp-cli 'allure/history' 'allure-source/history'"
  },
  "author": "Radoslaw Kaminski",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.14.4",
    "@wdio/allure-reporter": "^5.7.11",
    "@wdio/cli": "^5.7.12",
    "@wdio/local-runner": "^5.7.12",
    "@wdio/mocha-framework": "^5.7.14",
    "@wdio/selenium-standalone-service": "^5.7.8",
    "@wdio/spec-reporter": "^5.7.9",
    "@wdio/sync": "^5.7.9",
    "allure-commandline": "^2.9.0",
    "chai": "^4.2.0",
    "cp-cli": "^2.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^6.1.3",
    "rimraf": "^2.6.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3",
    "webdriverio": "^5.7.14"
  }
}
